
@{
    ViewBag.Title = "RegistrarUsuario";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="container">

    <div class="row justify-content-center" style="margin-top:5%">
        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-3 d-none d-lg-block"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                  <h3 class="h4 text-gray-900 mb-4">Registrar Usuario</h3>
                                </div>
                                <form class="user">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Identificación">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Nombre">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Correo Electrónico">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Contraseña">
                                    </div>

                                    <a href="index.html" class="btn btn-primary btn-user btn-block">
                                      Procesar
                                    </a>
                                </form>
                                <hr>
                                <div class="text-center">
                                  <a class="small" href="@Url.Action("RecuperarAcceso","Inicio")">Recuperar acceso</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("IniciarSesion","Inicio")">Iniciar Sesión</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>